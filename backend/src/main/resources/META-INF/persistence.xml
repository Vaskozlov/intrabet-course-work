<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
    <persistence-unit name="IsCoursePU" >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/IsCourseDS</jta-data-source>
        <class>org.vaskozlov.is.course.bean.Bet</class>
        <class>org.vaskozlov.is.course.bean.AdminLog</class>
        <class>org.vaskozlov.is.course.bean.Category</class>
        <class>org.vaskozlov.is.course.bean.Event</class>
        <class>org.vaskozlov.is.course.bean.Outcome</class>
        <class>org.vaskozlov.is.course.bean.PaymentMethod</class>
        <class>org.vaskozlov.is.course.bean.Transaction</class>
        <class>org.vaskozlov.is.course.bean.User</class>
        <class>org.vaskozlov.is.course.bean.Wallet</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/is_course"/>
            <property name="jakarta.persistence.jdbc.user" value="vaskozlov"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
        </properties>
    </persistence-unit>
</persistence>